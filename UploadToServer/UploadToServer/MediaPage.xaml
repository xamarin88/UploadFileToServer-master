<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UploadToServer.MediaPage">
    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            <Button x:Name="takePhoto" Text="Take Photo" Clicked="TakePhoto_Clicked"/>
            <Button x:Name="takeVideo" Text="Take Video" Clicked="TakeVideo_Clicked"/>
            <Image x:Name="image" HeightRequest="399"/>
            <Label x:Name="sourcePath"></Label>
            <Button x:Name="uploadFile" Text="Upload" Clicked="UploadFile_Clicked"/>
            <Label x:Name="RemotePathLabel"></Label>
        </StackLayout> 
    </ScrollView>
</ContentPage>